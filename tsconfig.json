{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "DOM"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "jest", "vite/client"],
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "module": "es2022",
    "moduleResolution": "Node"
  },
  "include": ["src/**/*"]
}
